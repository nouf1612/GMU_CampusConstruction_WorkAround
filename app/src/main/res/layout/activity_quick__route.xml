<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".Quick_Route"
    tools:visibility="visible">


    <!--dependent spinner-->

    <Button
        android:id="@+id/button_AddToFav"
        android:layout_width="145dp"
        android:layout_height="58dp"
        android:layout_marginBottom="184dp"
        android:text="@string/Add_Favorite"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />

    <Spinner
        android:id="@+id/spinner_Start_Building"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="142dp"
        android:layout_marginBottom="248dp"
        android:entries="@array/Start_Buildings"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/button_GetRoute"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <Button
        android:id="@+id/button_GoToMA"
        android:layout_width="147dp"
        android:layout_height="56dp"
        android:layout_marginBottom="92dp"
        android:text="@string/previous"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button_AddToFav"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_AddToFav"
        app:layout_constraintTop_toBottomOf="@+id/button_AddToFav"
        app:layout_constraintVertical_bias="0.562"
        tools:visibility="visible" />

    <Spinner
        android:id="@+id/spinner_Dest_Building"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="107dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/button_GetRoute"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:visibility="visible" />

    <Button
        android:id="@+id/button_GetRoute"
        android:layout_width="146dp"
        android:layout_height="0dp"
        android:layout_marginBottom="261dp"
        android:text="@string/Get_Route"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_Start_Building"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="20dp"
        android:text="@string/Destination_Building"
        app:layout_constraintBottom_toTopOf="@+id/spinner_Dest_Building"
        app:layout_constraintEnd_toStartOf="@+id/button_GetRoute"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/spinner_Dest_Building"
        app:layout_constraintTop_toBottomOf="@+id/spinner_Start_Building" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="101dp"
        android:layout_marginBottom="12dp"
        android:text="@string/Start_Building"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/spinner_Start_Building"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:visibility="visible" />


</androidx.constraintlayout.widget.ConstraintLayout>